{
    "name": "@meshal10613/theme",
    "version": "1.0.2",
    "description": "A lightweight theme manager for JavaScript, TypeScript, React, Next.js, and Node.js. Easily set, get, and control themes including system default.",
    "main": "dist/index.cjs.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs.js",
            "import": "./dist/index.esm.js"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "test": "vitest run"
    },
    "keywords": [
        "theme",
        "dark-mode",
        "light-mode",
        "javascript",
        "typescript",
        "react",
        "nextjs",
        "frontend",
        "backend",
        "theme-manager"
    ],
    "author": "Syed Mohiuddin Meshal <syedmohiuddinmeshal24@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^24.10.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.6.2",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.9"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/meshal10613/theme.git"
    },
    "bugs": {
        "url": "https://github.com/meshal10613/theme/issues"
    },
    "homepage": "https://github.com/meshal10613/theme#readme"
}
